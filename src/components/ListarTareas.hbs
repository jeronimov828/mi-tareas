<table class="table table-striped my-0 dataTable no-footer" aria-describedby="datatables-dashboard-projects_info">
    <h5 class="card-title mb-0">Tareas</h5>
    <thead>
        <tr>
            <th class="sorting sorting_asc">Numero</th>
            <th class="sorting sorting_asc">titulo</th>
            <th class="d-none d-xl-table-cell sorting">descripcion</th>
            <th class="d-none d-xl-table-cell sorting">fecha vencimiento</th>
            <th class="d-none d-xl-table-cell sorting">completada</th>
            <th class="d-none d-xl-table-cell sorting">Editar</th>
        </tr>
    </thead>
    <tbody>
        {{#each tareas}}
        <tr>
            <td>{{id}}</td>
            <td>{{titulo}}</td>
            <td>{{descripcion}}</td>
            <td>{{fecha_vencimiento}}</td>
            <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="estadoTareas-{{id}}" {{#if
                        completada}}checked{{/if}} onclick="app.tareasModule.cambiarEstadoTarea({{id}})">

                    <label class="form-check-label" id="estadoLabel-{{id}}" for="estadoTareas-{{id}}">
                        {{#if completada}}Completada{{else}}Pendiente{{/if}}
                    </label>
                </div>
            </td>
            <td>
                <button type="button" class="btn btn-secondary" id="modalEditar" onclick="app.tareasModule.mostrarModalEditar({{id}})"><i class="fa-solid fa-pen-to-square"></i></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>